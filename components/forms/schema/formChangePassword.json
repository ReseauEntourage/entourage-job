{
  "id": "form-change-pwd",
  "fields": [
    {
      "id": "oldPassword",
      "name": "oldPassword",
      "type": "password",
      "component": "input",
      "placeholder": "Tapez votre ancien mot de passe",
      "title": "Ancien mot de passe*"
    },
    {
      "id": "newPassword",
      "name": "newPassword",
      "type": "password",
      "component": "input",
      "placeholder": "Tapez votre nouveau mot de passe",
      "title": "Nouveau mot de passe*"
    },
    {
      "id": "confirmPassword",
      "name": "confirmPassword",
      "type": "password",
      "component": "input",
      "placeholder": "Confirmez votre nouveau mot de passe",
      "title": "Mot de passe confirmé*"
    }
  ],
  "rules": [
    {
      "field": "oldPassword",
      "method": "isLength",
      "args": [
        {
          "max": 100
        }
      ],
      "validWhen": true,
      "message": "100 caractères maximum"
    },
    {
      "field": "oldPassword",
      "method": "isLength",
      "args": [
        {
          "min": 6
        }
      ],
      "validWhen": true,
      "message": "Doit contenir au moins 6 caractères"
    },
    {
      "field": "newPassword",
      "method": "isLength",
      "args": [
        {
          "max": 100
        }
      ],
      "validWhen": true,
      "message": "100 caractères maximum"
    },
    {
      "field": "newPassword",
      "method": "isLength",
      "args": [
        {
          "min": 6
        }
      ],
      "validWhen": true,
      "message": "Doit contenir au moins 6 caractères"
    },
    {
      "field": "confirmPassword",
      "method": "isLength",
      "args": [
        {
          "max": 100
        }
      ],
      "validWhen": true,
      "message": "100 caractères maximum"
    },
    {
      "field": "confirmPassword",
      "method": "isLength",
      "args": [
        {
          "min": 6
        }
      ],
      "validWhen": true,
      "message": "Doit contenir au moins 6 caractères"
    }
  ]
}
