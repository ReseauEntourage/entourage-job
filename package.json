{
  "name": "entourage-jobs",
  "version": "1.2.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -r dotenv/config ./backend/serveur-next.js",
    "dev-server": "nodemon --watch ./backend/* -r dotenv/config ./backend/serveur-next.js",
    "dev-front": "node -r dotenv/config ./backend/serveur-next.js",
    "dev-debug": "nodemon --inspect --watch ./backend/* -r dotenv/config ./backend/serveur-next.js",
    "test": "NODE_ENV=test npx jest --config=jest.config.js --runInBand",
    "posttest": "mv .babelrc ./test/justForMocha.babelrc",
    "pretest-windows": "copy /Y .\\test\\justForMocha.babelrc .\\.babelrc",
    "test-windows": "mocha --require @babel/register './test/*.test.js' || npm run posttest-windows",
    "posttest-windows": "del .\\.babelrc",
    "build": "next build",
    "prestart": "sequelize db:migrate",
    "start": "NODE_ENV=production node -r dotenv/config ./backend/serveur-next.js",
    "uikit-install": "cd ./assets/ && git clone git://github.com/uikit/uikit.git && cd uikit && git checkout master && npm i",
    "uikit-update": "cd ./assets/uikit/ && git pull && npm i",
    "uikit-compile": "cp -r ./assets/custom/ ./assets/uikit/custom/ && cd ./assets/uikit/ && npm run compile && cd ../../ && cp -r ./assets/uikit/dist/ ./static/dist",
    "uikit-install-windows": "cd .\\assets\\ && git clone git://github.com/uikit/uikit.git && cd uikit && git checkout master && npm i",
    "uikit-update-windows": "cd .\\assets\\uikit\\ && git pull && npm i",
    "uikit-compile-windows": "xcopy /Y /S /I .\\assets\\custom .\\assets\\uikit\\custom && cd .\\assets\\uikit && npm run-script compile && cd ..\\.. && xcopy /Y /S .\\assets\\uikit\\dist .\\static\\dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ReseauEntourage/entourage-job.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "precommit": "NODE_ENV=production lint-staged",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "echo 'pretty-quick -- staged'",
      "eslint pages/ --fix",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-less": "^1.0.1",
    "airtable": "^0.8.1",
    "array-move": "^2.2.2",
    "aws-s3": "^2.0.5",
    "aws-sdk": "^2.626.0",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-session": "^1.17.0",
    "express-sslify": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "less": "^3.11.1",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "next": "^9.2.2",
    "node-mailjet": "^3.3.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-select": "^3.0.8",
    "react-share": "^3.0.1",
    "react-sortable-hoc": "^1.11.0",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1",
    "sharp": "^0.23.4",
    "text-to-svg": "^3.1.5",
    "uid-safe": "^2.1.5",
    "uikit": "^3.5.4",
    "uuid": "^3.4.0",
    "validator": "^11.1.0",
    "webpack": "^4.41.6"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/register": "^7.8.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "faker": "^4.1.0",
    "jest": "^26.1.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1"
  }
}