{
  "name": "entourage-jobs",
  "version": "0.5.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -r dotenv/config serveur-express.js",
    "dev-server": "nodemon -r dotenv/config serveur-express.js",
    "dev-front": "node -r dotenv/config serveur-express.js",
    "pretest": "ren justForMocha.babelrc .babelrc",
    "test": "mocha --require @babel/register './test/*' || npm run posttest",
    "posttest": "ren .babelrc justForMocha.babelrc",
    "build": "next build",
    "start": "NODE_ENV=production node -r dotenv/config serveur-express.js",
    "uikit-install": "cd ./assets/ && git clone git@github.com:uikit/uikit.git && cd uikit && git checkout master && npm i",
    "uikit-update": "cd ./assets/uikit/ && git pull && npm i",
    "uikit-compile": "cp -r ./custom/ ./assets/uikit/custom/ && cd ./assets/uikit/ && npm run-script compile && cd ../../ && cp -r ./assets/uikit/dist/ ./static/dist && rm -rf ./assets/uikit/dist/ && rm -rf ./assets/uikit/custom/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ReseauEntourage/entourage-job.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "precommit": "NODE_ENV=production lint-staged",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "echo 'pretty-quick -- staged'",
      "eslint pages/ --fix",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-less": "^1.0.1",
    "axios": "^0.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "less": "^3.10.3",
    "moment": "^2.24.0",
    "next": "^9.0.1",
    "node-mailjet": "^3.3.1",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-share": "^3.0.1",
    "sequelize": "^5.18.4",
    "sequelize-cli": "^5.5.1",
    "sharp": "^0.23.1",
    "text-to-svg": "^3.1.5",
    "uikit": "^3.1.7",
    "uuid": "^3.3.3",
    "validator": "^11.1.0",
    "webpack": "^4.41.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.6.3",
    "@babel/register": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "chai": "*",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.2.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "mocha": "*",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2"
  }
}
